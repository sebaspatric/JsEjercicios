{{> headers title="Estás en Games"}}

<h1 class="text-center p-5"> {{title}} </h1>

<div class="container p-5">
    <table class="table table-dark table-hover">
    <thead class="text-center">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Nombre Juego</th>
          <th scope="col">Género un juego</th>
        </tr>
    </thead>

    <tbody class="text-center">
        <tr>
        {{#each games}}

        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{gthis.genre}}</td>
        </tr>

        {{/each}}
     
</tr>
    </tbody>
    
</table>

</div>




{{> footer year=2022}}